<xsd:schema
	targetNamespace="http://courts.gov.bc.ca/CCD.Source.GetDocument.ws:GetDocument"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:tns="http://courts.gov.bc.ca/CCD.Source.GetDocument.ws:GetDocument"
	xmlns:xmime="http://www.w3.org/2005/05/xmlmime" >

	<xsd:element name="getDocument">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="DocumentRequest" type="tns:Document" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

	<xsd:complexType name="Document">
		<xsd:sequence>
			<xsd:element name="DocumentId" type="xsd:string" />
			<xsd:element name="CourtDivisionCd" type="xsd:string" />
			<!-- optional -->
			<xsd:element name="FlattenYN" nillable="true" minOccurs="0" type="xsd:string"/> 
		</xsd:sequence>
	</xsd:complexType>

	<xsd:element name="getDocumentResponse">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="DocumentResponse" nillable="true"
					type="tns:DocumentResult" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

	<xsd:complexType name="DocumentResult">
		<xsd:sequence>
			<xsd:element name="B64Content" nillable="true"
				type="xsd:base64Binary" xmime:expectedContentTypes="application/octet-stream" />	
			<xsd:element name="ResultCd" nillable="true"
				type="xsd:string" />
			<xsd:element name="ResultMessage" nillable="true"
				type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>

</xsd:schema>